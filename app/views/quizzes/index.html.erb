<% content_for :page_title, "Available Quizzes" %>

<div class="public-container">
  <div class="page-header">
    <h1>üìö Available Quizzes</h1>
    <p class="subtitle">Select a quiz to test your knowledge</p>
  </div>

  <% if @quizzes.any? %>
    <div class="quizzes-grid">
      <% @quizzes.each do |quiz| %>
        <div class="quiz-card">
          <div class="quiz-card-header">
            <h3><%= link_to quiz.title, quiz_path(quiz), class: "quiz-title-link" %></h3>
          </div>
          
          <% if quiz.description.present? %>
            <div class="quiz-card-description">
              <p><%= truncate(quiz.description, length: 150, omission: '...') %></p>
            </div>
          <% end %>
          
          <div class="quiz-card-meta">
            <div class="meta-item">
              <span class="meta-icon">‚ùì</span>
              <span class="meta-value"><%= quiz.questions.count %> Questions</span>
            </div>
            <div class="meta-item">
              <span class="meta-icon">‚è±Ô∏è</span>
              <span class="meta-value">Est. <%= (quiz.questions.count * 1.5).ceil %> min</span>
            </div>
          </div>

          <div class="quiz-card-actions">
            <%= link_to "Start Quiz ‚Üí", quiz_path(quiz), class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <div class="empty-state-icon">üìù</div>
      <h2>No Quizzes Available</h2>
      <p>There are currently no quizzes available. Please check back later!</p>
    </div>
  <% end %>
</div>

<style>
  .public-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 40px 20px;
  }

  .page-header {
    text-align: center;
    margin-bottom: 50px;
  }

  .page-header h1 {
    margin: 0 0 10px 0;
    font-size: 2.5rem;
    color: #1a1a1a;
    font-weight: 700;
  }

  .subtitle {
    margin: 0;
    font-size: 1.1rem;
    color: #666;
  }

  .quizzes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 25px;
    margin-bottom: 40px;
  }

  .quiz-card {
    background: #ffffff;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .quiz-card:hover {
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-4px);
  }

  .quiz-card-header {
    padding: 20px;
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    color: white;
  }

  .quiz-card-header h3 {
    margin: 0;
    font-size: 1.3rem;
    font-weight: 600;
    line-height: 1.4;
  }

  .quiz-title-link {
    color: white;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .quiz-title-link:hover {
    opacity: 0.9;
  }

  .quiz-card-description {
    padding: 15px 20px;
    background: #f8f9fa;
    flex-grow: 1;
  }

  .quiz-card-description p {
    margin: 0;
    font-size: 0.95rem;
    color: #666;
    line-height: 1.6;
  }

  .quiz-card-meta {
    padding: 15px 20px;
    display: flex;
    gap: 20px;
    border-top: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    color: #555;
  }

  .meta-icon {
    font-size: 1.1rem;
  }

  .meta-value {
    font-weight: 500;
  }

  .quiz-card-actions {
    padding: 20px;
    background: #ffffff;
  }

  .btn {
    display: inline-block;
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.95rem;
    text-align: center;
    width: 100%;
  }

  .btn-primary {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    color: white;
  }

  .btn-primary:hover {
    background: linear-gradient(135deg, #0056b3 0%, #003d82 100%);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
  }

  .empty-state {
    text-align: center;
    padding: 80px 40px;
    background: #f8f9fa;
    border-radius: 12px;
    border: 2px dashed #d0d0d0;
  }

  .empty-state-icon {
    font-size: 4rem;
    margin-bottom: 20px;
    display: block;
  }

  .empty-state h2 {
    margin: 0 0 10px 0;
    font-size: 1.5rem;
    color: #333;
  }

  .empty-state p {
    margin: 0;
    color: #666;
    font-size: 1.05rem;
  }

  @media (max-width: 768px) {
    .public-container {
      padding: 30px 15px;
    }

    .page-header h1 {
      font-size: 1.8rem;
    }

    .quizzes-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .quiz-card-meta {
      flex-wrap: wrap;
    }
  }
</style>
