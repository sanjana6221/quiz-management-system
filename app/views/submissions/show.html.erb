<% content_for :page_title, "Quiz Results" %>

<div class="public-container">
  <div class="results-container">
    <div class="results-header <%= @results[:passed] ? 'passed' : 'failed' %>">
      <div class="results-icon">
        <%= @results[:passed] ? '✅' : '⚠️' %>
      </div>
      
      <h1><%= @results[:passed] ? 'Congratulations!' : 'Quiz Complete' %></h1>
      <p class="results-subtitle">
        <%= @results[:passed] ? "You've passed the quiz!" : "Thank you for taking the quiz!" %>
      </p>
    </div>

    <div class="results-score">
      <div class="score-circle">
        <div class="score-percentage"><%= @results[:score_percentage] %>%</div>
        <div class="score-label">Score</div>
      </div>
      
      <div class="score-details">
        <div class="score-stat">
          <span class="stat-label">Correct Answers</span>
          <span class="stat-value"><%= @results[:correct_answers] %> / <%= @results[:multiple_choice_questions] %></span>
        </div>
        <div class="score-stat">
          <span class="stat-label">Questions Answered</span>
          <span class="stat-value"><%= @submission.attempt_answers.count %> / <%= @results[:total_questions] %></span>
        </div>
      </div>
    </div>

    <div class="participant-info">
      <div class="info-group">
        <span class="info-label">Submitted:</span>
        <span class="info-value"><%= @submission.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
      </div>
    </div>

    <div class="detailed-results">
      <h2>Detailed Results</h2>
      
      <% @quiz.questions.each_with_index do |question, index| %>
        <div class="result-question">
          <div class="question-header">
            <div class="question-number">Question <%= index + 1 %></div>
            <span class="question-type <%= question.question_type %>"><%= question.question_type.humanize %></span>
          </div>

          <div class="question-text">
            <%= simple_format(question.body) %>
          </div>

          <% attempt = @submission.attempt_answers.find_by(question: question) %>
          <% 
            selected_option_ids = if attempt&.selected_option_ids.present?
                                     JSON.parse(attempt.selected_option_ids)
                                   else
                                     []
                                   end
          %>

          <% if question.scq? || question.mcq? %>
            <div class="answer-details">
              <h4>Answer Options:</h4>
              <% question.options.each_with_index do |option, option_index| %>
                <div class="answer-option <%= 'selected' if selected_option_ids.include?(option.id) %> <%= 'correct' if option.correct? %>">
                  <div class="option-indicator">
                    <% if option.correct? && selected_option_ids.include?(option.id) %>
                      <span class="badge correct">✓ Correct</span>
                    <% elsif selected_option_ids.include?(option.id) && !option.correct? %>
                      <span class="badge incorrect">✗ Incorrect</span>
                    <% elsif option.correct? && !selected_option_ids.include?(option.id) %>
                      <span class="badge correct">✓ Correct (not selected)</span>
                    <% end %>
                  </div>
                  
                  <div class="option-info">
                    <span class="option-letter"><%= ('A'.ord + option_index).chr %>)</span>
                    <span class="option-text"><%= option.text %></span>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="results-actions">
      <%= link_to "← Back to Quizzes", quizzes_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>

