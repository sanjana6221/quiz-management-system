<% content_for :page_title, @quiz.title %>

<div class="admin-content">
  <div class="admin-header">
    <h1><%= @quiz.title %></h1>
    <div class="admin-actions">
      <%= link_to "Delete Quiz", admin_quiz_path(@quiz), 
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure? This will permanently delete the quiz and all submissions." },
                  class: "btn btn-danger" %>
      <%= link_to "Back to Quizzes", admin_quizzes_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="quiz-details">
    <% if @quiz.description.present? %>
      <div class="quiz-description">
        <h3>Description</h3>
        <p><%= simple_format(@quiz.description) %></p>
      </div>
    <% end %>

    <div class="quiz-meta">
      <p><strong>Total Questions:</strong> <%= @quiz.questions.count %></p>
      <p><strong>Created:</strong> <%= @quiz.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
      <p><strong>Last Updated:</strong> <%= @quiz.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
    </div>
  </div>

  <div class="questions-section">
    <h2>Questions (<%= @quiz.questions.count %>)</h2>
    
    <% if @quiz.questions.any? %>
      <% @quiz.questions.each_with_index do |question, index| %>
        <div class="question-preview" data-question-id="<%= question.id %>">
          <div class="question-header">
            <h3>Question <%= index + 1 %></h3>
            <span class="question-type"><%= question.question_type.humanize %></span>
          </div>
          
          <div class="question-body">
            <p><%= simple_format(question.body) %></p>
          </div>

          <% if question.options.any? %>
            <div class="question-options">
              <h4>Answer Options:</h4>
              <ul class="options-list">
                <% question.options.each_with_index do |option, option_index| %>
                  <li class="option-item <%= 'correct' if option.correct? %>">
                    <span class="option-letter"><%= ('A'.ord + option_index).chr %>)</span>
                    <span class="option-text"><%= option.text %></span>
                    <% if option.correct? %>
                      <span class="correct-indicator">âœ“ Correct Answer</span>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state">
        <p>No questions have been added to this quiz yet.</p>
        <%= link_to "Add Questions", edit_admin_quiz_path(@quiz), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
